{
  "manifest_version": 3,
  "name": "Website Blocker",
  "description": "Blocks specified websites.",
  "version": "1.0",
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "storage",
    "notifications",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "URL_blocker.png",
      "48": "URL_blocker.png",
      "128": "URL_blocker.png"
    }
  },
  "icons": {
    "16": "URL_blocker.png",
    "48": "URL_blocker.png",
    "128": "URL_blocker.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}